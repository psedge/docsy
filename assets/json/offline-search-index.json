{{- $.Scratch.Add "offline-search-index" slice -}}
{{- range where .Site.AllPages ".Params.exclude_search" "!=" true -}}
{{- $.Scratch.Add "offline-search-index" (dict "title" .Title "last_mod" .Lastmod "description" .Params.description "tags" .Params.tags "ref" .RelPermalink "body" .Plain "excerpt" (.Summary | truncate 200)) -}}
{{- end -}}
{{- $.Scratch.Get "offline-search-index" | jsonify -}}
